@model CSD412GroupCWebApp.Models.Article

@{
    ViewData["Title"] = "Display";
}

    <h1>@Html.DisplayFor(model => model.Title)</h1>

    <div>
        <h4>By: @Html.DisplayFor(model => model.Author.Name)</h4>
        <hr />
        @Html.Raw(@Model.Content)
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArticleCategories)
            </dt>
            <dd class="col-sm-10">
                @String.Join(", ", @Model.ArticleCategories.Select(c => c.Category.Name))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DatePosted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DatePosted)
            </dd>
        </dl>
    </div>
<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
